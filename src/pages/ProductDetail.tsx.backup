import { useEffect, useState } from "react";
import { useParams, Link } from "react-router-dom";
import { getProductById, addToCart, Product } from "@/lib/shopify";
import { Button } from "@/components/ui/button";
import { ImageCustomizer } from "@/components/ImageCustomizer";
import { ArrowLeft, ShoppingCart } from "lucide-react";
import { toast } from "sonner";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";

// Placeholder for icon data - replace with actual data source
const availableIcons = [
  { id: "bike", name: "Bike", url: "/icons/bike.png" },
  { id: "male-runner", name: "Male Runner", url: "/icons/male-runner.png" },
  { id: "female-runner", name: "Female Runner", url: "/icons/female-runner.png" },
  { id: "obstacles", name: "Obstacles", url: "/icons/obstacles.png" },
];

interface CustomizationData {
  imageData?: string;
  hasCustomization: boolean;
  customObjects: any[]; // To store positions and types of custom elements
}

const ProductDetail = () => {
  const { id } = useParams<{ id: string }>();
  const [product, setProduct] = useState<Product | null>(null);
  const [loading, setLoading] = useState(true);
  const [customization, setCustomization] = useState<CustomizationData>({ hasCustomization: false, customObjects: [] });

  const [selectedLeftIcon1, setSelectedLeftIcon1] = useState<string | null>(null);
  const [selectedLeftIcon2, setSelectedLeftIcon2] = useState<string | null>(null);
  const [selectedRightIcon1, setSelectedRightIcon1] = useState<string | null>(null);
  const [nameText, setNameText] = useState("");

  useEffect(() => {
    const fetchProduct = async () => {
      if (!id) return;
      setLoading(true);
      try {
        const prod = await getProductById(id);
        setProduct(prod);
      } catch (error) {
        console.error("Failed to fetch product:", error);
      } finally {
        setLoading(false);
      }
    };
    fetchProduct();
  }, [id]);

  const handleAddToCart = () => {
    if (!product) return;

    if (!customization.hasCustomization && customization.customObjects.length === 0) {
      toast.error("Please customize your design first!");
      return;
    }

    addToCart({
      product,
      quantity: 1,
      customization: {
        imageData: customization.imageData,
        customObjects: customization.customObjects,
      },
      id: `${product.id}-${Date.now()}`,
    });

    toast.success("Added to cart!", {
      description: "Your customized product has been added to your cart.",
    });
  };

  const currentSelectedIcons = [
    selectedLeftIcon1 ? { ...availableIcons.find(icon => icon.id === selectedLeftIcon1)!, initialLeft: 80, initialTop: 120 } : null,
    selectedLeftIcon2 ? { ...availableIcons.find(icon => icon.id === selectedLeftIcon2)!, initialLeft: 160, initialTop: 120 } : null,
    selectedRightIcon1 ? { ...availableIcons.find(icon => icon.id === selectedRightIcon1)!, initialLeft: 320, initialTop: 120 } : null,
  ].filter(Boolean) as { id: string; url: string; initialLeft: number; initialTop: number; }[];


  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-muted-foreground">Loading product...</div>
      </div>
    );
  }

  if (!product) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <h2 className="text-2xl font-bold mb-4">Product not found</h2>
          <Link to="/shop">
            <Button variant="hero">Back to Shop</Button>
          </Link>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen py-12 bg-background">
      <div className="container mx-auto px-4">
        <Link to="/shop">
          <Button variant="ghost" className="mb-6">
            <ArrowLeft className="mr-2 h-4 w-4" />
            Back to Shop
          </Button>
        </Link>

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-12">
          {/* Product Info */}
          <div className="space-y-6">
            <h1 className="text-4xl font-bold">{product.name}</h1>
            <div className="text-3xl font-bold text-accent">${product.price.toFixed(2)}</div>

            <div className="prose prose-sm max-w-none">
              <p className="text-muted-foreground">{product.description}</p>
            </div>

            <div className="space-y-2 pt-4 border-t border-border">
              <div className="flex justify-between">
                <span className="text-muted-foreground">Material:</span>
                <span className="font-medium">{product.material}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">Dimensions:</span>
                <span className="font-medium">{product.dimensions}</span>
              </div>
              <div className="flex justify-between">
                <span className="text-muted-foreground">Customizable:</span>
                <span className="font-medium">{product.customizable ? "Yes" : "No"}</span>
              </div>
            </div>

            {/* Customization Options */}
            <div className="space-y-4 pt-4 border-t border-border">
              <h3 className="text-xl font-semibold">Customization Options</h3>
              <p className="text-sm text-muted-foreground">Select icons and drag them on the hanger to position them.</p>

              <div>
                <Label htmlFor="left-icon-1">Left Icon 1</Label>
                <Select onValueChange={setSelectedLeftIcon1} value={selectedLeftIcon1 || ""}>
                  <SelectTrigger id="left-icon-1">
                    <SelectValue placeholder="Select an icon" />
                  </SelectTrigger>
                  <SelectContent>
                    {availableIcons.map((icon) => (
                      <SelectItem key={icon.id} value={icon.id}>
                        <div className="flex items-center">
                          <img src={icon.url} alt={icon.name} className="h-5 w-5 mr-2" />
                          {icon.name}
                        </div>
                      </SelectItem>
                    ))}
                  </SelectContent>
                </Select>
              </div>

              <div>
                <Label htmlFor="left-icon-2">Left Icon 2</Label>
                <Select onValueChange={setSelectedLeftIcon2} value={selectedLeftIcon2 || ""}>
                  <SelectTrigger id="left-icon-2">
                    <SelectValue placeholder="Select an icon" />
                  </SelectTrigger>
                  <SelectContent>
                    {availableIcons.map((icon) => (
                      <SelectItem key={icon.id} value={icon.id}>
                        <div className="flex items-center">
                          <img src={icon.url} alt={icon.name} className="h-5 w-5 mr-2" />
                          {icon.name}
                        </div>
                      </SelectItem>
                    ))}
                  </SelectContent>
                </Select>
              </div>

              <div>
                <Label htmlFor="name-text">Name</Label>
                <Input
                  id="name-text"
                  placeholder="UHSHDIUD"
                  value={nameText}
                  onChange={(e) => setNameText(e.target.value)}
                />
              </div>

              <div>
                <Label htmlFor="right-icon-1">Right Icon 1</Label>
                <Select onValueChange={setSelectedRightIcon1} value={selectedRightIcon1 || ""}>
                  <SelectTrigger id="right-icon-1">
                    <SelectValue placeholder="Select an icon" />
                  </SelectTrigger>
                  <SelectContent>
                    {availableIcons.map((icon) => (
                      <SelectItem key={icon.id} value={icon.id}>
                        <div className="flex items-center">
                          <img src={icon.url} alt={icon.name} className="h-5 w-5 mr-2" />
                          {icon.name}
                        </div>
                      </SelectItem>
                    ))}
                  </SelectContent>
                </Select>
              </div>

            </div>

            <Button
              variant="hero"
              size="lg"
              className="w-full"
              onClick={handleAddToCart}
              disabled={!customization.hasCustomization && customization.customObjects.length === 0}
            >
              <ShoppingCart className="mr-2 h-5 w-5" />
              Add to Cart
            </Button>
          </div>

          {/* Customization Canvas */}
          <div>
            <h2 className="text-2xl font-bold mb-4">Customize Your Design</h2>
            <ImageCustomizer
              productImage={product.image}
              onCustomizationChange={setCustomization}
              selectedIcons={currentSelectedIcons}
              nameText={nameText}
            />
          </div>
        </div>
      </div>
    </div>
  );
};

export default ProductDetail;
